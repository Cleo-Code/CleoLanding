---
import Layout from "../layouts/Layout.astro";
import IntroCard from "../components/cards/IntroCard.astro";
import IntroNavBar from "../components/elements/IntroNavBar.astro";
---

<Layout  title="introduccion">
    <section class="flex flex-col gap-20 dark:text-white text-black">
        <IntroNavBar />

        <article class="px-16 w-full h-auto dark:text-white text-black items-center">
            <h1 class="text-center font-bold text-3xl mb-5">Introductorio</h1>
            <div class=" flex  justify-center gap-2 mb-64">
                <IntroCard Route="Windows" CardTitle="Windows" CardDescription="Introductorio con el OS Windows" />
                <IntroCard Route="LinuxMac"  CardTitle="Mac / Linux" CardDescription="Introductorio con el OS MacOS" />
            </div>
        </article>
    </section>
</Layout>